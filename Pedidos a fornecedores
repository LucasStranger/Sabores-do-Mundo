    def salvar_pedidos_em_csv(self, nome_arquivo):
        import csv

        with open(nome_arquivo + '_pedidos.csv', 'w', newline='', encoding='utf-8-sig') as file:
            writer = csv.writer(file)
            # Lógica para salvar pedidos em arquivo CSV
            writer.writerow(['ID Pedido', 'Fornecedor', 'Produtos', 'Quantidade'])
            # Aqui você pode adicionar a lógica para escrever os pedidos no arquivo CSV
        print(f"Pedidos salvos em '{nome_arquivo}_pedidos.csv'.")

